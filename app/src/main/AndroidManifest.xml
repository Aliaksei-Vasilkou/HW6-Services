<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.coyclab.hw6_services"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.FragmentsActivity"/>
        <activity android:name=".activities.PlayerActivity"/>
        <service android:name=".services.PlayerService"/>
        <service android:name=".services.SimpleIntentService"/>
    </application>

</manifest>